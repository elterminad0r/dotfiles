#!/usr/bin/env sh

# .__                                         .__
# |__|  ____    ______ ____    _____    ____  |__|_____     ____
# |  | /    \  /  ___//  _ \  /     \  /    \ |  |\__  \  _/ ___\
# |  ||   |  \ \___ \(  <_> )|  Y Y  \|   |  \|  | / __ \_\  \___
# |__||___|  //____  >\____/ |__|_|  /|___|  /|__|(____  / \___  >
#          \/      \/              \/      \/          \/      \/
# FIGMENTIZE: insomniac

set -eu

# tap left control, programmatically. This is a little less intrusive than
# insomniac-press
xdotool key Control_L
msgdate="$(date +"%H:%M:%S")"
echo press "$msgdate"
notify-send press "$msgdate"
