#!/usr/bin/env sh

silent() {
    "$@" > /dev/null 2> /dev/null
}

case "$(uname -s)" in
    Darwin)
        pbcopy
        ;;
    Cygwin)
        cat > /dev/clipboard
        ;;
    *)
        if silent command -v xclip; then
            xclip -in -selection clipboard
        elif silent command -v xsel; then
            xsel --clipboard --input
        else
            >&2 echo "I'm not ready for this"
        fi
        ;;
esac
