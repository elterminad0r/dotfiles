!!! URxvt setup
/* FIXME - emoji fonts don't actually work in URxvt */

URxvt*font: xft:Liberation Mono for Powerline:style=Regular:size=12
URxvt*boldFont: xft:Liberation Mono for Powerline:style=Bold:size=12
URxvt*italicFont: xft:Liberation Mono for Powerline:style=Italic:size=12
URxvt*boldItalicfont: xft:Liberation Mono for Powerline:style=Bold Italic:size=12

URxvt*inputMethod:  xim

URxvt*loginShell: true

URxvt*saveLines: 8192

URxvt*intensityStyles:   false

! right hand side scrollbar...
! URxvt*rightScrollBar: true
URxvt*scrollBar: false

URxvt*iso14755: false
URxvt*iso14755_52: false

URxvt*perl-ext-common: default,font-size,vtwheel

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

URxvt*secondaryScreen: 1
URxvt*secondaryScroll: 0

! URxvt*transparent:   true
! URxvt*shading:       90

! lost focus
URxvt*fading:  10

! URxvt*visualBell:  true

!!! UXTerm setup

/* UXTerm doesn't support fallback fonts */
UXTerm*faceName: xft:Liberation Mono for Powerline:style=Regular:size=12

UXTerm*loginShell: true

UXTerm*saveLines: 8192

UXTerm*selectToClipboard: true

! double-click to select whole URLs :D
UXTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

UXTerm*VT100.translations: #override \
Ctrl <Key> minus: smaller-vt-font() \n\
Ctrl <Key> plus: larger-vt-font() \n\

UXTerm*ScrollBar: false

! stop output to terminal from jumping down to bottom of scroll again
UXTerm*scrollTtyOutput: false

UXTerm*boldColors: false
